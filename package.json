{
  "name": "presidium-reference",
  "version": "0.0.1",
  "description": "Reference documentation powered by Presidium.",
  "authors": [
    {
      "name": "Dominic Follett-Smith",
      "email": "dominic@spandigital.com"
    }
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean -s",
    "build": "npm run build:copy-content & npm run build:copy-presidium & npm run build:copy-overrides",
    "build:copy-content": "cpx --watch \"./content/**/*\" dist &",
    "build:copy-presidium": "cpx --watch \"../presidium/**/*\" dist &",
    "build:copy-overrides": "cpx --watch \"./_config_overrides.yml\" dist &",
    "postbuild": "cd ./dist && jekyll serve --config _config.yml,_config_overrides.yml -s . -d versions/latest"
  },
  "license": "TBD",
  "devDependencies": {},
  "dependencies": {
    "cpx": "^1.5.0",
    "renamer": "^0.6.1",
    "rimraf": "^2.5.4"
  }
}
