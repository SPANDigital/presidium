    }
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean -s",
    "build": "npm run build:copy-content & npm run build:copy-presidium",
    "build:copy-content": "cpx \"./content/**/*\" dist",
    "build:copy-presidium": "cpx \"../presidium-docs/**/*\" dist",
    "postbuild": "cd ./dist && jekyll serve -s . -d versions/latest"
  },
