  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean -s",
    "build": "npm run build:presidium & npm run build:content & npm run build:media & npm run build:config & wait",
    "build:content": "cpx --watch \"./content/**/*\" dist",
    "build:media": "cpx --watch \"./media/**/*\" dist/media",
    "build:presidium": "cpx --watch \".build/presidium-core/**/*\" dist",
    "build:config": "cpx \"./_config.yml\" ./dist",
    "serve": "cd ./dist && jekyll serve"
  },
